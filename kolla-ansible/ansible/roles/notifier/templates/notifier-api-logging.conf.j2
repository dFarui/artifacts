[loggers]
keys=root

[handlers]
keys=consoleHandler,filelogHandler

[formatters]
keys=logFormatter

[logger_root]
level=DEBUG
handlers=consoleHandler,filelogHandler

[handler_filelogHandler]
class=handlers.RotatingFileHandler
level=DEBUG
formatter=logFormatter
args=('/var/log/kolla/notifier/notifier-api.log', 'a', 20*1024*1024, 3)

[handler_consoleHandler]
class=StreamHandler
level=DEBUG
formatter=logFormatter
args=(sys.stdout,)

[formatter_logFormatter]
format=%(asctime)s notifier-api: %(name)s - %(levelname)s - %(message)s
