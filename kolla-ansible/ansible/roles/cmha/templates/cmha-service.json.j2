{
    "command": "/usr/bin/cmhad start",
    "config_files": [
        {
            "source": "{{ container_config_directory }}/cmha.conf",
            "dest": "/etc/cmha/cmha.conf",
            "owner": "cmha",
            "perm": "{{ cmha_files_permission }}"
        },
        {
            "source": "{{ container_config_directory }}/watchmen-producer.conf",
            "dest": "/etc/watchmen/watchmen-producer.conf",
            "owner": "cmha",
            "perm": "{{ cmha_files_permission }}"
        },
        {
            "source": "{{ container_config_directory }}/watchmen-extra-whitelist.yml",
            "dest": "/etc/watchmen/watchmen-extra-whitelist.yml",
            "owner": "cmha",
            "perm": "{{ cmha_files_permission }}"
        }
    ],
    "permissions": [
       {
            "path": "/var/log/kolla/cmha",
            "owner": "cmha:kolla",
            "recurse": true
       }
    ]
}
